<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.mathleague.AdditionGame2"
    android:background="@android:color/holo_purple">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:id="@+id/imageView5"
        android:src="@drawable/addhero"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:id="@+id/imageView6"
        android:src="@drawable/speechbubble"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toRightOf="@+id/question"
        android:layout_toEndOf="@+id/question"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4"
        android:id="@+id/ans1"
        android:textColor="#FFFFFFFF"
        android:textSize="50dp"
        android:layout_alignTop="@+id/ans3"
        android:layout_toLeftOf="@+id/hintbutton"
        android:layout_toStartOf="@+id/hintbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="6"
        android:id="@+id/ans3"
        android:textColor="#FFFFFFFF"
        android:textSize="50dp"
        android:clickable="true"
        android:autoText="false"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/ans2"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="3 dogs + 2 cats = ? animals"
        android:id="@+id/question1"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/holo_purple"
        android:textColorHint="@android:color/primary_text_dark"
        android:typeface="sans"
        android:textIsSelectable="true"
        android:singleLine="true"
        android:layout_above="@+id/imageView8"
        android:layout_alignRight="@+id/hintbutton"
        android:layout_alignEnd="@+id/hintbutton"
        android:layout_marginBottom="37dp" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/dog2"
        android:src="@drawable/cat"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/imageView6"
        android:layout_alignRight="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/dog4"
        android:src="@drawable/dog"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/select"
        android:layout_toStartOf="@+id/select" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageView2"
        android:src="@drawable/cow"
        android:layout_alignTop="@+id/dog2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageView4"
        android:src="@drawable/dog"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/dog2"
        android:layout_toStartOf="@+id/dog2" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageView8"
        android:src="@drawable/cat"
        android:layout_above="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageView9"
        android:src="@drawable/cow"
        android:layout_below="@+id/imageView8"
        android:layout_toLeftOf="@+id/dog4"
        android:layout_toStartOf="@+id/dog4" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/imageView3"
        android:src="@drawable/dog"
        android:layout_above="@+id/dog2"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Select your answer"
        android:id="@+id/select"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hint"
        android:id="@+id/hintbutton"
        android:background="@android:color/darker_gray"
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 2"
        android:id="@+id/question"
        android:layout_alignBottom="@+id/hintbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
