<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.mathleague.SecondActivity"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose A Game"
        android:id="@+id/gamesList"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="false"
        android:height="50dp"
        android:textColor="#ffff0300"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:textColorHighlight="#fffff41e" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/additionButton"
        android:src="@drawable/addherobutton"
        android:layout_below="@+id/gamesList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/shapesButton"
        android:src="@drawable/shapeherobutton"
        android:layout_below="@+id/additionButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/subtractionButton"
        android:src="@drawable/subherobutton"
        android:layout_alignTop="@+id/shapesButton"
        android:layout_alignLeft="@+id/gamesList"
        android:layout_alignStart="@+id/gamesList" />

</RelativeLayout>
