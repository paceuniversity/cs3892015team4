<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.mathleague.AdditionGame"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How many dogs are there?"
        android:id="@+id/question1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textColorHighlight="@android:color/holo_purple"
        android:textColorHint="@android:color/primary_text_dark"
        android:typeface="sans"
        android:textIsSelectable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog1"
        android:src="@drawable/dog"
        android:layout_below="@+id/question1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog3"
        android:src="@drawable/dog"
        android:layout_below="@+id/dog1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog2"
        android:src="@drawable/dog"
        android:layout_above="@+id/dog3"
        android:layout_toRightOf="@+id/dog1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dog4"
        android:src="@drawable/dog"
        android:layout_alignTop="@+id/dog3"
        android:layout_alignRight="@+id/dog2"
        android:layout_alignEnd="@+id/dog2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/three"
        android:textColor="#FFFFFFFF"
        android:textSize="50dp"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/four"
        android:layout_toStartOf="@+id/four"
        android:background="#FF000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4"
        android:id="@+id/four"
        android:textColor="#FFFFFFFF"
        android:textSize="50dp"
        android:clickable="true"
        android:autoText="false"
        android:background="#FF000000"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/dog4"
        android:layout_alignStart="@+id/dog4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/five"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/dog4"
        android:layout_alignEnd="@+id/dog4"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp"
        android:background="#FF000000" />

</RelativeLayout>
